
<h1>Add a New Restaurant</h1>

<p><%= flash[:error] %></p>

<%= form_for (:restaurant) do |f| %>
 <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
 </div>
 <div>
    <%= f.label :Image %>
    <%= f.text_field :image %>
    <br>
</div>
<div>
    <%= f.label :Cuisine %>
    <%= f.text_field :cuisine %>
    <br>
 </div>
 <div>
    <%= f.label :City %>
    <%= f.text_field :city %>
    <br>
</div>
<div>
    <%= f.label :Country %>
    <%= f.text_field :country %>
    <br>
</div>
<div>
    <%= f.label :Website %>
    <%= f.text_field :website %>
    <br>
</div>
    <%= f.submit "Submit" %>

<% end %>



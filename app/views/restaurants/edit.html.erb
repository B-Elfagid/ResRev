
<h1>Edit Restaurant</h1>

<p><%= flash[:error] %></p>

<%= form_for (@restaurant) do |f| %>
 
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>

    <%= f.label :Image %>
    <%= f.text_field :image %>
    <br>

    <%= f.label :Cuisine %>
    <%= f.text_field :cuisine %>
    <br>

    <%= f.label :City %>
    <%= f.text_field :city %>
    <br>

    <%= f.label :Country %>
    <%= f.text_field :country %>
    <br>

    <%= f.label :Website %>
    <%= f.text_field :website %>
    <br>

    <%= f.submit "Edit" %>

<% end %>



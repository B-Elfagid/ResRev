<div class="row">

  <div class="col-md-4">
    <%= image_tag @restaurant.image.url, :size => "375x325" %>
  </div>

  <div class="col-md-8">
  <h2><%= @restaurant.name %><h2>
  <h3>Cuisine: <%= @restaurant.category.name %></h3>
  <%= @restaurant.city %><br>
  <%= @restaurant.country %><br>
  <%= @restaurant.website %><br>
</div>
</div>

<div class="row">
  <div class="col-md-4">
  </div>
</div>


<%= link_to "Back", './' %> |

<% if logged_in? %>
<% if @restaurant.owner_id == current_owner.id %>
<%= link_to "Edit", edit_restaurant_path(@restaurant) %> |
<%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<% end %>

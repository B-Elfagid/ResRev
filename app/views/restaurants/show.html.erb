<h1>Restaurant added by:- <%= @restaurant.user.username %></h1>


<div class="row">

 <% if @restaurant.try(:image).try(:url)%>
  <div class="col-md-4">
    <%= image_tag @restaurant.image.url, :size => "375x325" %>
  </div>

  <div class="col-md-8">
  <h2><%= @restaurant.name %><h2>
  <%= @restaurant.city %><br>
  <%= @restaurant.country %><br>
  <%= link_to @restaurant.website %><br>

</div>
</div>

<div class="row">
  <div class="col-md-4">
  
  <!-- where the reviews rating will go -->
   <%= render @restaurant.reviews %>
  <div>
  <%= link_to "Add Review", new_restaurant_review_path(@restaurant) %>
  </div>
  <div>
  <%= link_to "See All Reviews", restaurant_reviews_path(@restaurant) %>
  </div>
  </div>
</div>


<%= link_to "Back", './' %> |

<% if logged_in? %>
<% if @restaurant.user_id == current_user.id %>
<%= link_to "Edit", edit_restaurant_path(@restaurant) %> |
<%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
<% end %>
<% end %>

<body>
<% if flash[:error] %>
<div class="errors flash fatal">
   <h3 class="error"><%= flash[:error] %>
   </div>
   <% end %>

<h1>All Reviews</h1>
<h2><%= @restaurant.name %></h2>
<% @restaurant.reviews.each do |review| %>
    <li><%= review.user.username %> <br>
    <%= render review %>
<% end %>
<br>
        <%= link_to "Back", restaurant_path(@restaurant) %> |

     </body>


<%= form_for([@restaurant, @review]) do |f| %>
    
    <%= f.label :rating %>
    <%= f.select :rating, options_for_select([1,2,3,4,5]), include_blank: "select rating" %>
    <br>

    <%= f.label :date %>
    <%= f.text_field :date, :placeholder => 'mm/dd/yyyy' %>
    <br>

    <%= f.label :category %>
    <%= f.select :category, [ 'Breakfast', 'Brunch', 'Lunch', 'Afternoon tea', 'Dinner' ], :prompt => 'Select One' %>
    <br>

    <%= f.label :comment %>
    <%= f.text_field :comment %>
    <br>
 
    <div class="form-group">
    <%= f.file_field :image %>
    </div>
   
    <%= f.submit "Submit" %>

    <% end %>
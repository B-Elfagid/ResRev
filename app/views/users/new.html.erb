
<% if @user.errors.any? %>
<% @user.errors.full_messages.each do |message|%>
    <div class="field_with_errors">
     <h3><%= message %> </h3>
   </div>
<%end%>
<%end%>

<h1>Sign up</h1>

<%= form_for (@user) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
   
    <%= f.label :Email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :Password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Sign Up" %>

<% end %>


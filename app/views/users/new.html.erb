<% if flash[:error] %>
<div class="errors flash fatal">
   <h3 class="error"><%= flash[:error] %>
   </div>
   <% end %>

<h1>Sign up</h1>

<%= form_for (@user) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username, required:true %>
    <br>
   
    <%= f.label :Email %>
    <%= f.email_field :email, required:true %>
    <br>
    <%= f.label :Password %>
    <%= f.password_field :password, required:true %>
    <br>
    <%= f.submit "Sign Up" %>

<% end %>


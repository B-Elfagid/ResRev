
<% if flash[:error] %>
<div class="field_with_errors"><%= flash[:error] %></div>
<% end %>

<h1>Login</h1>
<%= form_for (:user) do |f| %>

    <%= f.label :Email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :Password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Log In" %>

<% end %>

<p>Social Login:</p>
<div class="third-party-login">
<%= button_to "Log in with Google", '/auth/google_oauth2' %>
<%= button_to "Log in with Github", '/auth/github' %>
 </div>





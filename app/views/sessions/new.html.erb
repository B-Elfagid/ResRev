<% if flash[:error] %>
<div class="errors flash fatal">
   <h3 class="error"><%= flash[:error] %>
   </div>
   <% end %>


<h1>Login</h1>

<p><%= flash[:error] if flash[:error] %></p>

<%= form_for (:user) do |f| %>

    <%= f.label :Email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :Password %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Log In" %>

<% end %>

<p>Social Login:</p>
<div class="third-party-login">
<%= button_to "Log in with Google", '/auth/google_oauth2' %>
<%= button_to "Log in with Github", '/auth/github' %>
 </div>




